{
	"manifest_version": 3,
	"name": "Simple Pomodoro Timer",
	"version": "1.0",
	"description": "A simple Pomodoro timer extension for productivity",
	"permissions": ["storage", "alarms", "notifications"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon.png"
		}
	},
	"icons": {
		"16": "icons/icon.png"
	},
	"background": {
		"service_worker": "background.js"
	}
}
